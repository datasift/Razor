#!/usr/bin/env bash

mkdir -p /etc/chef

(
cat <<'EOP'
<%= validation_key %>
EOP
) | awk NF > /etc/chef/validation.pem
chmod 0600 /etc/chef/validation.pem

(
cat <<'EOP'
<%= config_content %>
EOP
) > /etc/chef/client.rb

(
cat <<'EOP'
<%= first_boot.to_json %>
EOP
) > /etc/chef/first-boot.json

<%= start_chef %>
